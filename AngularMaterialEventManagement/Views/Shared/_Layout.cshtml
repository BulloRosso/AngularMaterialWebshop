<!DOCTYPE html>
<html lang="en" >
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title - My ASP.NET MVC Application</title>
    <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />

    <meta name="viewport" content="initial-scale=1" />

     <!-- Material Design Lite -->
    <link rel="stylesheet" href="//storage.googleapis.com/code.getmdl.io/1.0.0/material.green-amber.min.css">

    <link rel="stylesheet" href="//fonts.googleapis.com/css?family=Roboto:100,300,400,500,700,900,400italic">
    <link rel="stylesheet" href="//cdnjs.cloudflare.com/ajax/libs/angular-material/0.10.0/angular-material.css">
    <link rel="stylesheet" href="//fonts.googleapis.com/icon?family=Material+Icons">
   
    <!-- <link rel="stylesheet" href="//cdnjs.cloudflare.com/ajax/libs/animate.css/3.4.0/animate.min.css" > -->

    <link rel="stylesheet" href="@Url.Content("~/Content/WebShop.css")">

    @Scripts.Render("~/bundles/modernizr")

</head>
<body layout="column" ng-app="EventApp">

    <div id="wrap">
        @RenderBody()
    </div>
    
    @Html.Partial("_FooterPartial")

    @Scripts.Render("~/bundles/jquery")

    <!-- Material Design Lite -->
    @*<script src="//storage.googleapis.com/code.getmdl.io/1.0.2/material.min.js"></script>*@

    <!-- 1.3.15 -->
    <script src="//cdnjs.cloudflare.com/ajax/libs/angular.js/1.4.4/angular.js"></script>
    <script src="//ajax.googleapis.com/ajax/libs/angularjs/1.4.4/angular-animate.min.js"></script>
    <script src="//cdnjs.cloudflare.com/ajax/libs/angular.js/1.4.4/angular-route.js"></script>
    <script src="//cdnjs.cloudflare.com/ajax/libs/angular.js/1.4.4/angular-animate.js"></script>
    <script src="//cdnjs.cloudflare.com/ajax/libs/angular.js/1.4.4/angular-sanitize.js"></script>

    <script src="//ajax.googleapis.com/ajax/libs/angularjs/1.4.4/angular-aria.min.js"></script>
    <script src="//cdnjs.cloudflare.com/ajax/libs/angular-material/0.10.0/angular-material.js"></script>
    <script src="//cdnjs.cloudflare.com/ajax/libs/underscore.js/1.8.3/underscore.js"></script>

    <script src="@Url.Content("~/Content/app/app.module.js")"></script>
    <script src="@Url.Content("~/Content/app/app.config.js")"></script>

    <script src="@Url.Content("~/Content/app/index/index.controller.js")"></script>
    <script src="@Url.Content("~/Content/app/event/event.controller.js")"></script>
    <script src="@Url.Content("~/Content/app/register/register.controller.js")"></script>
    <script src="@Url.Content("~/Content/app/components/toolbar.controller.js")"></script>

    @RenderSection("scripts", required: false)
</body>
</html>